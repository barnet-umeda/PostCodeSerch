<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PostCordSerch.PageSerch"
             Title="PageSerch">
    <VerticalStackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/><!--〒画像-->
                <RowDefinition Height="*"/><!--郵便番号入力-->
                <RowDefinition Height="*"/><!--検索実行ボタン-->
                <RowDefinition Height="50"/><!--余白-->
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" BackgroundColor="LightBlue"/>
            <Grid Grid.Row="1" BackgroundColor="LightYellow"/>
            <Grid Grid.Row="2" BackgroundColor="LightBlue"/>
            <Grid Grid.Row="3" BackgroundColor="LightYellow"/>
            
        </Grid>
    </VerticalStackLayout>
</ContentPage>