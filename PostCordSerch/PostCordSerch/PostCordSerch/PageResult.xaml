<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PostCordSerch.PageResult"
             Title="PageResult">
    <Grid 
        RowDefinitions="*, 2*, *, *, 10"
        ColumnDefinitions="50, *, 50">

        <Grid 
            Grid.Row="1"
            Grid.Column="1"
            RowDefinitions="*, *, *"
            ColumnDefinitions="*, 2*">
            
            <!--ここにレスポンスのラベルを配置-->
            <Grid Grid.Row="0" Grid.Column="0" BackgroundColor="LightPink"/>
            <Grid Grid.Row="1" Grid.Column="0" BackgroundColor="LightGreen"/>
            <Grid Grid.Row="2" Grid.Column="0" BackgroundColor="LightPink"/>
            
        </Grid>

    </Grid>
</ContentPage>